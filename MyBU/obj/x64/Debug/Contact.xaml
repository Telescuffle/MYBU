<Page
    x:Class="MyBU.Contact"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyBU"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="WhiteSmoke">

        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>

            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="2*"/>

        </Grid.RowDefinitions>

        <ComboBox x:ConnectionId='1' x:Name="comboBox" 
                  Grid.Row="2"
                  HorizontalAlignment="Center" 
                  Margin="25,0,25,10" 
                  VerticalAlignment="Bottom" 
                  Width="250" 
                  PlaceholderText="Please select a category..." 
                  FontSize="14">
            <ComboBoxItem Content="General Enquiry"></ComboBoxItem>
            <ComboBoxItem Content="Support"></ComboBoxItem>
            <ComboBoxItem Content="Feedback"></ComboBoxItem>
            <ComboBoxItem Content="Other"></ComboBoxItem>
        </ComboBox>

        <Button x:ConnectionId='2' x:Name="button" 
                Grid.Row="4"
                Content="Submit" 
                HorizontalAlignment="Stretch"
                Margin="80,5,80,5" 
                VerticalAlignment="Stretch" 
                MinWidth="120"
                MaxWidth="170"
                MinHeight="30"
                MaxHeight="40"
                Width="auto"
                Height="auto"
                Foreground="WhiteSmoke"
                Background="#FF930033" 
                FontWeight="SemiBold" 
                FontSize="14"/>

        <!--<TextBlock x:Name="textBlock" 
                   Grid.Row="0"
                   HorizontalAlignment="Center" 
                   Margin="25,0,25,0" 
                   TextWrapping="Wrap" 
                   Text="PLEASE NOTE:" 
                   VerticalAlignment="Center" 
                   FontWeight="Bold" 
                   FontSize="21" 
                   TextAlignment="Center"/>

        <TextBlock x:Name="textBlock1"
                   Grid.Row="1"
                   HorizontalAlignment="Center" 
                   Margin="25,50,25,0" 
                   TextWrapping="Wrap" 
                   Text="I may be unable to respond to all queries. Please be patient and I will try my best!" 
                   VerticalAlignment="Center" 
                   TextAlignment="Center"/>

        <TextBlock x:Name="Bug"
                   Grid.Row="1"
                   HorizontalAlignment="Center" 
                   Margin="25,25,25,0" 
                   TextWrapping="Wrap" 
                   Text="If you are contacting me about a problem you are having, please try and be specific about the problem as well as include your device model." 
                   VerticalAlignment="Top" 
                   TextAlignment="Center" 
                   FontSize="14"/>

        <TextBlock x:Name="Thanks"
                   Grid.Row="1"
                   HorizontalAlignment="Center" 
                   Margin="25,0,25,25" 
                   TextWrapping="Wrap" 
                   Text="Thanks :)" 
                   VerticalAlignment="Bottom" 
                   TextAlignment="Center"/>-->



        <TextBlock x:ConnectionId='3' x:Name="textBlock2" 
                   Grid.Row="2"
                   HorizontalAlignment="Center" 
                   Margin="25,10,25,0" 
                   TextWrapping="Wrap" 
                   Text="Please select the closest category below as to why you are contatcting me." 
                   VerticalAlignment="Top" 
                   TextAlignment="Center"
                   FontWeight="SemiBold" 
                   FontSize="17"/>

        <TextBlock x:ConnectionId='4' x:Name="DetailsText" 
                   Grid.Row="3"
                   HorizontalAlignment="Center" 
                   Margin="25,10,25,0" 
                   TextWrapping="Wrap" 
                   Text="Please provide details below" 
                   VerticalAlignment="Top" 
                   TextAlignment="Center"
                   FontWeight="SemiBold" FontSize="17"/>

        <TextBlock x:ConnectionId='5' x:Name="NameText"
                   HorizontalAlignment="Center" 
                   Margin="25,10,25,0" 
                   TextWrapping="Wrap" 
                   Text="What is your name?" 
                   VerticalAlignment="Top" 
                   TextAlignment="Center"
                   FontWeight="SemiBold" FontSize="17"/>

        <TextBlock x:ConnectionId='6' x:Name="EmailText"
                   HorizontalAlignment="Center" 
                   Margin="25,10,25,0" 
                   TextWrapping="Wrap" 
                   Text="Please provide a contact E-mail address." 
                   VerticalAlignment="Top" 
                   TextAlignment="Center"
                   FontWeight="SemiBold" FontSize="17" Grid.Row="1"/>
        <TextBox x:ConnectionId='7' x:Name="Details"
                 Margin="25,45,25,10" 
                 Grid.Row="3" 
                 TextWrapping="Wrap" 
                 PlaceholderText="Enter a discription" 
                 InputScope="Default" 
                 Height="auto" 
                 MinHeight="150"/>
        <TextBox x:ConnectionId='8' x:Name="Name" 
                 HorizontalAlignment="Center" 
                 Margin="25,0,25,10" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Bottom" 
                 Width="250" 
                 PlaceholderText="Enter your name" 
                 InputScope="PersonalFullName"/>
        <TextBox x:ConnectionId='9' x:Name="Email" 
                 Width="250"
                 HorizontalAlignment="Center"
                 Margin="25,0,25,10" 
                 Grid.Row="1" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Bottom" 
                 PlaceholderText="Enter your E-mail address" 
                 InputScope="EmailSmtpAddress"/>

    </Grid>
</Page>

